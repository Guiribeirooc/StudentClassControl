@model IEnumerable<StudentClassDomain.Models.ClassModel>

@{
    ViewData["Title"] = "Detalhes de Turma";
}

<form>
    <div class="row">
        <div class="col-md-6">
            <h4>Detalhes - Turma</h4>
        </div>
    </div>
    <hr />
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Turma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ano)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ano)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>