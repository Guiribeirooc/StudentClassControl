@model StudentClassDomain.Models.Requests.RelateClassRequest

@{
    ViewData["Title"] = "Create";
}

<h4> Associar Aluno e Turma</h4>
<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdStudent" class="control-label">Aluno</label>
                        <select asp-for="IdStudent" asp-items="ViewBag.Students" class="form-control text-uppercase"></select>
                        <span asp-validation-for="IdStudent" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdClass" class="control-label">Turma</label>
                        <select asp-for="IdClass" asp-items="ViewBag.Class" class="form-control text-uppercase"></select>
                        <span asp-validation-for="IdClass" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button asp-action="Index" title="Ir para lista" class="btn btn-outline-danger float-right">< Voltar para Lista</button>
                </div>

                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-danger float-right">Confirmar</button>
                </div>

            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
      }